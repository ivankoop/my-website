{
    "version": 2,
    "build": {
      "env": {
        "BUILDING_FOR_NOW": "true"
      }
    },
    "builds": [
      { "src": "admin/package.json", "use": "@now/next" },
      { "src": "home/package.json", "use": "@now/next" }
    ],
    "routes": [
      { "src": "/admin/_next(.*)", "dest": "admin/_next$1" },
      { "src": "/admin(.*)", "dest": "admin/admin$1" },
      { "src": "(.*)", "dest": "home$1" }
    ]
  }